{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "functions": [],
    "variables": {
        "web-app-name":"[concat('webapp',uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "name": "boniton86",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2023-01-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "F1",
                "capacity": 1
            },
            "tags": {
                "displayName": "boniton86"
            },
            "properties": {
                "name": "boniton86"
            }
        },
        {
            "name": "[variables('web-app-name')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2023-01-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/boniton86')]": "Resource",
                "displayName": "[variables('web-app-name')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', 'boniton86')]"
            ],
            "properties": {
                "name": "[variables('web-app-name')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'boniton86')]"
            }
        },
      {
        "name": "linkedTemplate",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2024-03-01",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "https://appstorage86.blob.core.windows.net/template/sqldatabase.json",
                "contentVersion": "1.0.0.0"
            },
            "parametersLink": {
                "uri": "https://appstorage86.blob.core.windows.net/template/sqldatabase-parameters.json",
                "contentVersion": "1.0.0.0"
            }
        }
      }
    ],
    "outputs": {
        "webAppName": {
            "type": "string",
            "value": "[variables('web-app-name')]"
        },
        "sqlserverfqdn": {
            "type": "string",
            "value": "[reference('linkedTemplate').outputs.sqlserverfqdn.value]"
        }
    }
}